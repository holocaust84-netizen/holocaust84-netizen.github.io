<script>
  // Basit ziyaretçi sayacı simülasyonu (sadece örnek)
  // Ben hariç artmayacak, farklı tarayıcılar için cookie/localStorage kullanılabilir
  const visitorKey = 'visitorCount_holocaust84';
  let count = localStorage.getItem(visitorKey) || 0;
  const username = 'holocaust84-netizen'; // benim kullanıcı adım
  const currentUser = prompt("Kullanıcı adı giriniz:");
  if(currentUser !== username){
      count = parseInt(count)+1;
      localStorage.setItem(visitorKey,count);
  }
  document.getElementById('visitorCount').innerText = "Ziyaretçi: " + count;
</script>

